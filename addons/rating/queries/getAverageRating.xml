<?xml version="1.0" encoding="UTF-8"?>
<query id="addons.rating.getAverageRating" action="select">
	<tables>
		<table name="rating" />
	</tables>
	<columns>
		<column name="AVG(rating)" alias="avg_rating" />
		<column name="COUNT(*)" alias="rating_count" />
	</columns>
	<conditions>
		<condition operation="equal" column="document_srl" var="document_srl" />
	</conditions>
</query>